<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  
  <remote name="SHRP-Reborn"
	fetch="https://github.com/SHRP-Reborn" />

  <remote name="TeamWin"
	fetch="https://github.com/TeamWin" />

  <remote name="devices" 
	fetch="https://github.com/SHRP-Devices" />

  <remove-project name="platform/bootable/recovery"/>
  <remove-project name="build/make"/>

  <project path="build/make" name="android_build" remote="SHRP-Reborn" revision="android-9.0" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
    <linkfile src="shrp" dest="build/shrp" />
  </project>

  <project path="bootable/recovery" name="android_bootable_recovery" remote="SHRP-Reborn" revision="android-9.0"/>
  <project path="vendor/shrp" name="android_vendor_shrp" remote="SHRP-Reborn" revision="android-9.0"/>
  <project path="system/update_engine" name="android_system_update_engine" remote="SHRP-Reborn" revision="android-9.0"/>
  
  <!-- Busybox repo -->
  <project path="external/busybox" name="android_external_busybox" remote="omnirom" revision="android-9.0" />

  <!-- Magiskboot repo -->
  <project path="external/magisk-prebuilt" name="external_magisk-prebuilt" remote="TeamWin" revision="android-9.0" />

</manifest>
